{
  "compilerOptions": {
    "types": ["@editable/core"],
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": [
    "src/index.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__"
  ]
} 
